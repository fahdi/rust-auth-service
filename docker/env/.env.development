# Development Environment Configuration

# ===== CORE SERVICE =====
RUST_LOG=debug
JWT_SECRET=dev-secret-key-change-in-production
ENVIRONMENT=development
RUST_BACKTRACE=1

# ===== DATABASE =====
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=auth_service_dev
DATABASE_URL=mongodb://admin:password123@mongodb:27017/auth_service_dev?authSource=admin

# Redis
REDIS_PASSWORD=dev_password
REDIS_URL=redis://redis:6379

# ===== EMAIL =====
EMAIL_PROVIDER=smtp
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM_EMAIL=dev@localhost
SMTP_FROM_NAME=Auth Service Dev

# ===== DEVELOPMENT FEATURES =====
DEV_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://localhost
DEV_AUTO_MIGRATE=true
DEV_SEED_DATABASE=true
HOT_RELOAD=true

# ===== RELAXED SECURITY FOR DEV =====
BCRYPT_ROUNDS=4
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
FAILED_LOGIN_ATTEMPTS_LIMIT=100

# ===== EXTERNAL PORTS (Development) =====
MAILHOG_WEB_PORT=8025
MONGODB_EXTERNAL_PORT=27018
REDIS_EXTERNAL_PORT=6380