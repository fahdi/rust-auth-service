# Rust Auth Service Environment Configuration

# ===== CORE SERVICE CONFIGURATION =====
RUST_LOG=info
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENVIRONMENT=development

# ===== DATABASE CONFIGURATION =====
# MongoDB (Primary)
MONGO_USERNAME=admin
MONGO_PASSWORD=password123
MONGO_DATABASE=auth_service
MONGODB_PORT=27017
DATABASE_URL=mongodb://admin:password123@mongodb:27017/auth_service?authSource=admin

# Redis Cache
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ===== EMAIL CONFIGURATION =====
EMAIL_PROVIDER=smtp
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Auth Service

# Email Provider API Keys (if using cloud providers)
BREVO_API_KEY=
SENDGRID_API_KEY=

# ===== ADMIN UI CONFIGURATION =====
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin
GRAFANA_PASSWORD=admin

# ===== EXTERNAL PORTS =====
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
MONGODB_EXTERNAL_PORT=27017
REDIS_EXTERNAL_PORT=6379

# ===== SSL/TLS CONFIGURATION =====
SSL_CERT_PATH=./ssl/localhost.crt
SSL_KEY_PATH=./ssl/localhost.key

# ===== OAUTH2 CONFIGURATION =====
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===== SECURITY SETTINGS =====
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=24
FAILED_LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# ===== MONITORING & OBSERVABILITY =====
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=30
LOG_LEVEL=info
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ===== DEVELOPMENT OVERRIDES =====
DEV_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://localhost
DEV_AUTO_MIGRATE=true
DEV_SEED_DATABASE=true