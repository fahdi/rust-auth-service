# Rust Auth Service Environment Variables
# Copy this file to .env and customize for your environment

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4

# Database Configuration
DATABASE_TYPE=mongodb
DATABASE_URL=mongodb://admin:password123@localhost:27017/auth_service?authSource=admin

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-256-bits-minimum
BCRYPT_ROUNDS=12

# Cache Configuration
CACHE_TYPE=redis
REDIS_URL=redis://:redis_password@localhost:6379

# Email Configuration
EMAIL_PROVIDER=smtp
EMAIL_FROM_ADDRESS=noreply@yourapp.com
EMAIL_FROM_NAME=Your App

# SMTP Configuration (for development with MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# Third-party Email Providers (Production)
# Uncomment and configure one of these for production

# Brevo (formerly SendInBlue)
# EMAIL_PROVIDER=brevo
# BREVO_API_KEY=your-brevo-api-key

# SendGrid
# EMAIL_PROVIDER=sendgrid  
# SENDGRID_API_KEY=your-sendgrid-api-key

# Logging Configuration
RUST_LOG=debug

# Production Environment Settings
# Uncomment these for production deployment
# RUST_ENV=production
# RUST_LOG=info
# SERVER_HOST=0.0.0.0
# DATABASE_URL=mongodb://username:password@prod-mongo-host:27017/auth_service?authSource=admin
# REDIS_URL=redis://:prod_password@prod-redis-host:6379